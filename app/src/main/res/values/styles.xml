<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 基础样式 -->
    <style name="Base.Theme.CH34XTool" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:navigationBarColor">@color/purple_500</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- 应用主题 -->
    <style name="Theme.CH34XTool" parent="Base.Theme.CH34XTool" />

    <!-- 按钮样式 -->
    <style name="Widget.CH34XTool.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
        <item name="android:paddingVertical">@dimen/padding_medium</item>
        <item name="android:paddingHorizontal">@dimen/padding_large</item>
    </style>

    <!-- 轮廓按钮样式 -->
    <style name="Widget.CH34XTool.Button.Outline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
        <item name="strokeColor">@color/purple_500</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- 文本按钮样式 -->
    <style name="Widget.CH34XTool.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 编辑框样式 -->
    <style name="Widget.CH34XTool.EditText" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/purple_500</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/purple_500</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="placeholderTextColor">@color/gray</item>
        <item name="endIconTint">@color/purple_500</item>
        <item name="startIconTint">@color/purple_500</item>
    </style>

    <!-- 卡片视图样式 -->
    <style name="Widget.CH34XTool.CardView" parent="Widget.Material3.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="contentPadding">@dimen/padding_medium</item>
    </style>

    <!-- 进度条样式 -->
    <style name="Widget.CH34XTool.ProgressBar" parent="Widget.Material3.Light.ProgressBar">
        <item name="android:progressTint">@color/purple_500</item>
        <item name="android:secondaryProgressTint">@color/light_gray</item>
        <item name="android:minHeight">@dimen/progress_bar_height</item>
    </style>

    <!-- 水平进度条样式 -->
    <style name="Widget.CH34XTool.ProgressBar.Horizontal" parent="Widget.Material3.Light.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/purple_500</item>
        <item name="android:secondaryProgressTint">@color/light_gray</item>
        <item name="android:minHeight">@dimen/progress_bar_height</item>
    </style>

    <!-- 工具栏标题样式 -->
    <style name="Widget.CH34XTool.Toolbar.Title" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 标签样式 -->
    <style name="Widget.CH34XTool.Label" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <!-- 值样式 -->
    <style name="Widget.CH34XTool.Value" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 小标题样式 -->
    <style name="Widget.CH34XTool.SmallTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 分割线样式 -->
    <style name="Widget.CH34XTool.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/light_gray</item>
    </style>

    <!-- 状态LED样式 -->
    <style name="Widget.CH34XTool.StatusLED">
        <item name="android:layout_width">@dimen/status_led_size</item>
        <item name="android:layout_height">@dimen/status_led_size</item>
        <item name="android:background">@drawable/bg_status_led</item>
    </style>

    <!-- 对话框样式 -->
    <style name="Theme.CH34XTool.Dialog" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <!-- 进度对话框样式 -->
    <style name="Theme.CH34XTool.Dialog.Progress" parent="Theme.CH34XTool.Dialog">
        <item name="android:progressBarStyle">@style/Widget.CH34XTool.ProgressBar.Horizontal</item>
    </style>

    <!-- Spinner下拉框样式 -->
    <style name="Widget.CH34XTool.Spinner" parent="Widget.Material3.Spinner">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <!-- CheckBox样式 -->
    <style name="Widget.CH34XTool.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="buttonTint">@color/purple_500</item>
    </style>

    <!-- RadioButton样式 -->
    <style name="Widget.CH34XTool.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="buttonTint">@color/purple_500</item>
    </style>

    <!-- Switch样式 -->
    <style name="Widget.CH34XTool.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="thumbTint">@color/purple_500</item>
        <item name="trackTint">@color/light_gray</item>
    </style>

    <!-- TabLayout样式 -->
    <style name="Widget.CH34XTool.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabTextColor">@color/gray</item>
        <item name="tabSelectedTextColor">@color/purple_500</item>
        <item name="tabIndicatorColor">@color/purple_500</item>
        <item name="tabRippleColor">@color/purple_200</item>
    </style>

    <!-- Slider样式 -->
    <style name="Widget.CH34XTool.Slider" parent="Widget.Material3.Slider">
        <item name="thumbColor">@color/purple_500</item>
        <item name="activeTrackColor">@color/purple_500</item>
        <item name="inactiveTrackColor">@color/light_gray</item>
        <item name="tickColorActive">@color/purple_700</item>
        <item name="tickColorInactive">@color/gray</item>
    </style>

    <!-- 列表项样式 -->
    <style name="Widget.CH34XTool.ListItem" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 列表项标题样式 -->
    <style name="Widget.CH34XTool.ListItem.Title" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 列表项副标题样式 -->
    <style name="Widget.CH34XTool.ListItem.Subtitle" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>