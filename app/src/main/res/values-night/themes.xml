<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.CH34XTool" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Android 10+ specific attributes for dark mode -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Edge-to-edge support -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <!-- Dark mode specific colors for views -->
    <style name="Theme.CH34XTool.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.CH34XTool.CardView" parent="Widget.Material3.CardView">
        <item name="cardBackgroundColor">@color/dark_gray</item>
    </style>

    <style name="Theme.CH34XTool.EditText" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/purple_200</item>
        <item name="hintTextColor">@color/purple_200</item>
    </style>
</resources>