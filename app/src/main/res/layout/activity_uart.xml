<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/padding_large">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="UART调试"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:id="@+id/scrollConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 波特率配置 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/card_elevation"
                app:cardCornerRadius="@dimen/card_corner_radius"
                android:layout_marginBottom="@dimen/margin_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="波特率设置"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="@color/purple_700"
                        android:layout_marginBottom="@dimen/margin_small"/>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderBaudRate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="1200"
                        android:valueTo="3000000"
                        android:value="115200"
                        android:stepSize="1"
                        app:labelBehavior="floating"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="当前: "
                            android:textSize="@dimen/text_size_medium"/>

                        <TextView
                            android:id="@+id/tvBaudRateValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="115200"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold"
                            android:textColor="@color/purple_500"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 高级配置 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/card_elevation"
                app:cardCornerRadius="@dimen/card_corner_radius"
                android:layout_marginBottom="@dimen/margin_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="高级设置"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="@color/purple_700"
                        android:layout_marginBottom="@dimen/margin_medium"/>

                    <!-- 数据位 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/margin_medium">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/data_bits"/>

                        <RadioGroup
                            android:id="@+id/rgDataBits"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rbDataBits5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:layout_marginEnd="@dimen/margin_medium"/>

                            <RadioButton
                                android:id="@+id/rbDataBits6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6"
                                android:layout_marginEnd="@dimen/margin_medium"/>

                            <RadioButton
                                android:id="@+id/rbDataBits7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7"
                                android:layout_marginEnd="@dimen/margin_medium"/>

                            <RadioButton
                                android:id="@+id/rbDataBits8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8"
                                android:checked="true"/>

                        </RadioGroup>

                    </LinearLayout>

                    <!-- 停止位 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/margin_medium">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/stop_bits"/>

                        <RadioGroup
                            android:id="@+id/rgStopBits"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rbStopBits1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:checked="true"
                                android:layout_marginEnd="@dimen/margin_medium"/>

                            <RadioButton
                                android:id="@+id/rbStopBits15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1.5"
                                android:layout_marginEnd="@dimen/margin_medium"/>

                            <RadioButton
                                android:id="@+id/rbStopBits2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2"/>

                        </RadioGroup>

                    </LinearLayout>

                    <!-- 校验位 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/margin_medium">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/parity"/>

                        <Spinner
                            android:id="@+id/spinnerParity"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <!-- 流控制 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/flow_control"/>

                        <Spinner
                            android:id="@+id/spinnerFlowControl"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 控制按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin_medium">

                <Button
                    android:id="@+id/btnConnect"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:text="@string/connect"
                    style="@style/Theme.CH34XTool.Button"
                    android:layout_marginEnd="@dimen/margin_small"/>

                <Button
                    android:id="@+id/btnDisconnect"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:text="@string/disconnect"
                    style="@style/Theme.CH34XTool.Button.Outline"
                    android:enabled="false"/>

            </LinearLayout>

            <!-- 日志控制 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin_medium">

                <Button
                    android:id="@+id/btnStartLog"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:text="@string/start_log"
                    style="@style/Theme.CH34XTool.Button.Outline"
                    android:layout_marginEnd="@dimen/margin_small"/>

                <Button
                    android:id="@+id/btnStopLog"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:text="@string/stop_log"
                    style="@style/Theme.CH34XTool.Button.Outline"
                    android:enabled="false"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- 数据显示区域 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDataDisplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardElevation="@dimen/card_elevation"
        app:cardCornerRadius="@dimen/card_corner_radius"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        app:layout_constraintTop_toBottomOf="@id/scrollConfig"
        app:layout_constraintBottom_toTopOf="@id/layoutSend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_medium"
                android:background="@color/light_gray">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="接收数据"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/clear"
                    style="@style/Theme.CH34XTool.Button.Outline"
                    android:textSize="@dimen/text_size_small"
                    android:minHeight="0dp"
                    android:padding="@dimen/padding_small"/>

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvReceivedData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_medium"
                    android:textSize="@dimen/text_size_small"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="2dp"/>

            </ScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 发送区域 -->
    <LinearLayout
        android:id="@+id/layoutSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Theme.CH34XTool.EditText"
            android:layout_marginEnd="@dimen/margin_small">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSendData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入发送数据"
                android:maxLines="3"
                android:inputType="textMultiLine"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:text="@string/send"
            style="@style/Theme.CH34XTool.Button"
            android:enabled="false"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>